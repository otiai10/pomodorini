{
    "manifest_version": 3,
    "name": "Pomodorini - Tiny Pomodoro Timer for Chrome Extension",
    "description": "Providing very simple POMODORO timer for your browser",
    "version": "0.1.0",
    "permissions": [
        "alarms",
        "notifications"
    ],
    "icons": {
      "16":  "icons/icon_16.png",
      "32":  "icons/icon_32.png",
      "48":  "icons/icon_48.png",
      "128": "icons/icon_128.png"
    },
    "action": {
        "default_icon": {
            "16":  "icons/icon_16.png",
            "32":  "icons/icon_32.png"
        },
        "default_title": "Start POMODORO!"
    },
    "background": {
        "service_worker": "background.js"
    }
}
