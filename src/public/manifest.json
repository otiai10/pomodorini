{
    "manifest_version": 3,
    "name": "Pomodorini - Tiny Pomodoro Timer for Chrome Extension",
    "description": "Providing very simple POMODORO timer for your browser",
    "version": "0.1.0",
    "permissions": [
        "alarms",
        "notifications"
    ],
    "icons": {
      "16":  "icons/red/16.png",
      "32":  "icons/red/32.png",
      "48":  "icons/red/48.png",
      "128": "icons/red/128.png"
    },
    "action": {
        "default_icon": {
            "16":  "icons/red/16.png",
            "32":  "icons/red/32.png"
        },
        "default_title": "Start POMODORO!",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}
